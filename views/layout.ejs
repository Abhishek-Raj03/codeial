<html>
  <head>
    <title><%= title %></title>

    <!-- linked noty link cdn-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.1/noty.min.js"></script>

    <!-- jquery cdn -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <link rel="stylesheet" href="/css/layout.css" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <!-- CSS only bootstrap-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <%- style %>

  </head>

  <body>
    <%- include('_header'); %>

    <main id="layout-main"><%- body %></main>


    <%- include('_footer'); %> 
        <%- script %>
    <!-- JavaScript Bundle with Popper bootstrap-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <!-- noty script -->
    <script>
      <% if(flash.success && flash.success.length>0){ %>
           new Noty({
            theme:'relax',
            text:'<%= flash.success %>',
            type:'success',
            layout:'topRight',
            timeout:1500
           }).show();
   <% } %>

   <% if(flash.error && flash.error.length>0){ %>
           new Noty({
            theme:'relax',
            text:'<%= flash.error %>',
            type:'error',
            layout:'topRight',
            timeout:1500
           }).show();
   <% } %>
    </script>
  </body>
</html>
